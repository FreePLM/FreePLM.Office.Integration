{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FreePLM": {
    "Server": {
      "Port": 5000,
      "AllowedOrigins": [
        "http://localhost"
      ]
    },
    "Storage": {
      "Provider": "LocalDirectory",
      "LocalDirectory": {
        "RootPath": "C:\\PLM-Storage",
        "CreateIfNotExists": true
      }
    },
    "Database": {
      "Provider": "SQLite",
      "SQLite": {
        "ConnectionString": "Data Source=C:\\PLM-Data\\freeplm.db",
        "CreateIfNotExists": true
      }
    },
    "Versioning": {
      "MajorRevisionFormat": "A,B,C,D",
      "MinorRevisionFormat": ".01,.02,.03",
      "MinorRevisionDigits": 2
    },
    "Locks": {
      "StaleThresholdHours": 24,
      "EnableStaleLockDetection": true
    },
    "DefaultMetadata": {
      "Group": "Engineering",
      "Role": "Engineer",
      "Project": "Default"
    }
  }
}
